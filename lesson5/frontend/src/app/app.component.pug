table(mat-table, [dataSource]="dataSource", class="mat-elevation-z8", style="width: 100%;")
  ng-container(matColumnDef="firstName")
    th(mat-header-cell, *matHeaderCellDef) Имя
    td(mat-cell, *matCellDef="let element") {{element.firstName}}
  ng-container(matColumnDef="lastName")
    th(mat-header-cell, *matHeaderCellDef) Фамилия
    td(mat-cell, *matCellDef="let element") {{element.lastName}}
  ng-container(matColumnDef="nickName")
    th(mat-header-cell, *matHeaderCellDef) Ник
    td(mat-cell, *matCellDef="let element") {{element.nickName}}
  ng-container(matColumnDef="email")
    th(mat-header-cell, *matHeaderCellDef) E-mail
    td(mat-cell, *matCellDef="let element") {{element.email}}
  ng-container(matColumnDef="age")
    th(mat-header-cell, *matHeaderCellDef) Возраст
    td(mat-cell, *matCellDef="let element") {{element.age}}
  tr(mat-header-row, *matHeaderRowDef="displayedColumns")
  tr(mat-row, *matRowDef="let row; columns: displayedColumns;")



